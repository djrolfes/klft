{
    "version": 8,
    "configurePresets": [
        {
            "name": "debug",
            "hidden": true,
            "displayName": "Debug",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "displayName": "Release",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-debug-serial",
            "inherits": "debug",
            "displayName": "Debug with Clang 19",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19"
            }
        },
        {
            "name": "clang-debug-OMP",
            "inherits": "debug",
            "displayName": "Debug with Clang 19 and OMP",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "Kokkos_ENABLE_SERIAL": "OFF",
                "Kokkos_ENABLE_OPENMP": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        },
        {
            "name": "clang-debug-Cuda",
            "inherits": "debug",
            "displayName": "Debug with Clang 19 and CUDA",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "Kokkos_ENABLE_SERIAL": "ON",
                "Kokkos_ENABLE_OPENMP": "OFF",
                "Kokkos_ENABLE_CUDA": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        },
        {
            "name": "clang-debug-Cuda-20",
            "inherits": "debug",
            "displayName": "Debug with Clang 20 and CUDA",
            "description": "Using compilers: C = /usr/bin/clang-20, CXX = /usr/bin/clang++-20",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-20",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-20",
                "Kokkos_ENABLE_SERIAL": "ON",
                "Kokkos_ENABLE_OPENMP": "OFF",
                "Kokkos_ENABLE_CUDA": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        },
        {
            "name": "release-serial",
            "inherits": "release",
            "displayName": "Clang 19 Release serial",
            "description": "Using compilers: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "Kokkos_ENABLE_SERIAL": "ON",
                "Kokkos_ARCH_NATIVE": "ON"
            }
        },
        {
            "name": "release-OMP",
            "inherits": "release",
            "displayName": "Clang 19 Release OMP",
            "description": "Using compilers: CXX = /usr/bin/clang++-19",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
